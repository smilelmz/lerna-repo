{
  // 那个子项目用到了 eslint 都需要手动添加进来，否则 vscode eslint 提示会失效（通配符不可用）
  "eslint.workingDirectories": ["packages/*"],
  "eslint.packageManager": "yarn",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreactor",
    "typescript",
    "typescriptreact",
    {
      "language": "react",
      "autoFix": true
    }
  ],
  "eslint.alwaysShowStatus": true,
  "stylelint.validate": ["css", "less", "postcss", "scss", "sass"],
  "prettier": {
    "singleQuote": true,
    "printWith": 120,
    "semi": false,
    "trailingComma": "none"
  }
}
